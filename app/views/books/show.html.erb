<div class="jumbotron" style="margin-top:5%;padding-top:1px">
    <div class="row">
        <div style="width:75%;float:left">
            <h1><%= @book.name %></h1>
            <p style="margin-left:1%">
            <% @book.authors.each do |author| %>
                <%= link_to author.name,author %>
                <% if not author.equal? @book.authors.last %>
                    |
                <% end %>
            <% end %>
            </p>
            <% @book.categories.each do |category| %>
                <p style="margin-left:1%"><%= link_to category.name,category %></p><br />
                <% end %>
            <p style="margin-left:1%">Serial Number : <%= @book.serial %></p>
            <p style="margin-left:1%">Row : <%= @book.row %></p>
            <p style="margin-left:1%">Shelf : <%= @book.shelf %></p>
    <% if session.has_key?(:user) && User.where(:username=>session[:user]).first.admin==true%>
            <%= button_to 'Edit Details',edit_book_path,{method:"get", class:"btn btn-lg btn-primary", style:"float:left;margin-right:5%;margin-top:5%"} %>
            <%= button_to 'Delete Book',@book, {method:"delete", class:"btn btn-lg btn-danger", style:"float:left;margin-right:5%;margin-top:5%", confirm: "Are you sure?"} %>
            <%= button_to 'Update Photo',edit_user_photo_path,{method:"get", class:"btn btn-lg btn-primary", style:"float:left;margin-right:5%;margin-top:5%"} %>
            <% end %>
        </div>
        <div style="float:left;margin-top:5%">
                   <% if @book.cover.file? %>
                          <%= image_tag @book.cover.url,{style:"width:125px;height:160px"} %>
                      <% else %>
                          <%= image_tag "passport_sample.png"%>
                          <% end %>
        </div>


    </div>
</div>
<% if not @book.users.empty? %>
<table class="table table-bordered">
    <tr>
        <th style="text-align:center">User Admission Number</th>
        <th style="text-align:center">User Name</th>
        <th style="text-align:center">Date of Issue</th>
        <th style="text-align:center">Date of Return</th>
    </tr>
    <% @book.users.each do |u| %>
        <% @class="" %>
        <% @dateofissue= Date.parse(Issuing.where(:book_id=>@book.id,:user_id=>u.id).first.dateofissue.to_s) %>
        <% @dateofreturn= Date.parse(Issuing.where(:book_id=>@book.id,:user_id=>u.id).first.dateofreturn.to_s) %>
        <% if @dateofreturn<Date.today %>
            <% @class="danger" %>
            <% end %>
            <tr class="<%=@class%>">
            <td><%= u.admissionnumber %></td>
            <td><%= u.name %></td>
            <td><%= @dateofissue %></td>
            <td><%= @dateofreturn %></td>
        </tr>
    <% end %>
</table>
<% end %>
