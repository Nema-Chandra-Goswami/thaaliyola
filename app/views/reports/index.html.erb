<div class="jumbotron" style="margin-top:5%;padding-top:1px">
    <h2 style="text-align:center">Statistical Report Generation</h2>
    <div style="text-align:center;margin-top:5%">
<%= form_tag(action:"showreport", controller: "reports", method: "post") do %>
    <%= text_field_tag :fromdate, nil,placeholder: "From Date" %>
    <%= text_field_tag :todate, nil, placeholder: "To Date" %><br /><br />
    <%= button_tag 'Generate', class:"btn btn-success", style:"width:50%;" %>
</div>
    <% end %>

<script type="text/javascript">
  $(document).ready(function(){
          $('#fromdate').datepicker({format: 'yyyy-mm-dd'});
          $('#todate').datepicker({format: 'yyyy-mm-dd'});
  })
</script>
